<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your theme here.
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        -->
    </style>

    <style name="Pair" parent="AppTheme">
        <item name="android:textColor">@color/pairTextColor</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ValuesInfo" parent="AppTheme">
        <item name="android:textColor">@color/infoTextColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="ValuesDetailsBtc" parent="AppTheme">
        <item name="android:textColor">@color/detailsBtcTextColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="ValuesDetailsCurrency" parent="AppTheme">
        <item name="android:textColor">@color/detailCurrencyTextColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
