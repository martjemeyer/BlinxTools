<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="1dp"
    app:strokeColor="@color/green"
    app:strokeWidth="1dp" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:padding="8dp">

        <TextView
            android:id="@+id/pair"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAlignment="center"
            style="@style/Pair"
            tools:text="GTPLUS/BTC"/>

        <ImageView
            android:id="@+id/gainIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/gain"
            app:layout_constraintTop_toBottomOf="@+id/gain"
            app:layout_constraintBottom_toTopOf="@+id/gain"
            android:src="@drawable/menu_up"
            android:tint="@color/green" />

        <TextView
            android:id="@+id/gain"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAlignment="center"
            android:textColor="@color/green"
            style="@style/ValuesDetailsCurrency"
            android:text="10%"/>

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/descriptionBarrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="end"
            app:constraint_referenced_ids="lastPriceBtc,lastPriceCurrency,highPrice,lowPrice"
            tools:layout_editor_absoluteX="78dp"
            tools:layout_editor_absoluteY="8dp" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/descriptionDetailBarrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="end"
            app:constraint_referenced_ids="lastPriceDetailsBtc,highPriceDetailsBtc,lowPriceDetailsBtc"
            tools:layout_editor_absoluteX="214dp"
            tools:layout_editor_absoluteY="8dp" />

        <!-- Last price -->
        <TextView
            android:id="@+id/lastPriceCurrency"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/pair"
            style="@style/ValuesInfo"
            android:text="Last price" />

        <TextView
            android:id="@+id/lastPriceDetailsCurrency"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/lastPriceCurrency"
            app:layout_constraintStart_toStartOf="@+id/lastPriceDetailsBtc"
            style="@style/ValuesDetailsCurrency"
            tools:text="0.16 EUR" />

        <TextView
            android:id="@+id/lastPriceBtc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/lastPriceCurrency"
            style="@style/ValuesInfo"
            android:visibility="gone"
            android:text="Last price" />

        <TextView
            android:id="@+id/lastPriceDetailsBtc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/lastPriceDetailsCurrency"
            app:layout_constraintStart_toEndOf="@+id/descriptionBarrier"
            style="@style/ValuesDetailsCurrency"
            tools:text="0.00001623" />

        <!-- 24 High price -->
        <TextView
            android:id="@+id/highPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/lastPriceDetailsBtc"
            style="@style/ValuesInfo"
            android:visibility="gone"
            tools:visibility="visible"
            android:text="24h High" />

        <TextView
            android:id="@+id/highPriceDetailsBtc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/highPrice"
            app:layout_constraintStart_toEndOf="@+id/descriptionBarrier"
            style="@style/ValuesDetailsBtc"
            android:visibility="gone"
            tools:visibility="visible"
            tools:text="0.00002023" />

        <!-- 24 Low price -->
        <TextView
            android:id="@+id/lowPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/highPrice"
            style="@style/ValuesInfo"
            android:visibility="gone"
            tools:visibility="visible"
            android:text="24h Low" />

        <TextView
            android:id="@+id/lowPriceDetailsBtc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/lowPrice"
            app:layout_constraintStart_toEndOf="@+id/descriptionBarrier"
            style="@style/ValuesDetailsBtc"
            android:visibility="gone"
            tools:visibility="visible"
            tools:text="0.00001212" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>