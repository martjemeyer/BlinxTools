<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".calculator.CalculatorActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#222222"
        android:theme="@style/ThemeOverlay.AppCompat.DayNight.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.DayNight"
        app:title="Calculator"
        android:elevation="4dp"/>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/grey_20"
        app:layout_constraintBottom_toBottomOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/input"
            style="@style/Pair"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:background="@drawable/soft_corners"
            android:backgroundTint="@color/grey_30"
            android:padding="8dp"
            android:text="1.1234567"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/output"
            app:layout_constraintEnd_toStartOf="@+id/inputCurrency"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/inputCurrency"
            style="@style/Pair"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:padding="8dp"
            android:text="BTC"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/input"
            app:layout_constraintTop_toTopOf="@+id/input" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/output"
            style="@style/Pair"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:padding="8dp"
            android:text="1.1234567"
            android:textColor="@color/white"
            android:background="@drawable/soft_corners"
            android:backgroundTint="@color/grey_30"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/outputCurrency"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/input" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/outputCurrency"
            style="@style/Pair"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:padding="8dp"
            android:text="Euro"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/output"
            app:layout_constraintTop_toTopOf="@+id/output" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/leftColumn"
            android:layout_width="@dimen/calculator_button_size"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/middleColumn"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="@dimen/calculator_space_between_container_size">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button7"
                style="@style/Calculator"
                android:layout_width="@dimen/calculator_button_size"
                android:layout_height="@dimen/calculator_button_size"
                android:background="@drawable/roundbutton"
                android:text="7"
                app:layout_constraintBottom_toTopOf="@+id/button4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                android:layout_margin="@dimen/calculator_space_between_button_size"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button4"
                style="@style/Calculator"
                android:layout_width="@dimen/calculator_button_size"
                android:layout_height="@dimen/calculator_button_size"
                android:background="@drawable/roundbutton"
                android:text="4"
                app:layout_constraintBottom_toTopOf="@+id/button1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button7"
                android:layout_margin="@dimen/calculator_space_between_button_size"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button1"
                style="@style/Calculator"
                android:layout_width="@dimen/calculator_button_size"
                android:layout_height="@dimen/calculator_button_size"
                android:background="@drawable/roundbutton"
                android:text="1"
                app:layout_constraintBottom_toTopOf="@+id/buttonDot"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button4"
                android:layout_margin="@dimen/calculator_space_between_button_size"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonDot"
                style="@style/Calculator"
                android:layout_width="@dimen/calculator_button_size"
                android:layout_height="@dimen/calculator_button_size"
                android:background="@drawable/roundbutton"
                android:text="."
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button1"
                android:layout_margin="@dimen/calculator_space_between_button_size"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/middleColumn"
            android:layout_width="@dimen/calculator_button_size"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/rightColumn"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/leftColumn"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="@dimen/calculator_space_between_container_size">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button8"
                style="@style/Calculator"
                android:layout_width="@dimen/calculator_button_size"
                android:layout_height="@dimen/calculator_button_size"
                android:background="@drawable/roundbutton"
                android:text="8"
                app:layout_constraintBottom_toTopOf="@+id/button5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                android:layout_margin="@dimen/calculator_space_between_button_size"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button5"
                style="@style/Calculator"
                android:layout_width="@dimen/calculator_button_size"
                android:layout_height="@dimen/calculator_button_size"
                android:background="@drawable/roundbutton"
                android:text="5"
                app:layout_constraintBottom_toTopOf="@+id/button2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button8"
                android:layout_margin="@dimen/calculator_space_between_button_size"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button2"
                style="@style/Calculator"
                android:layout_width="@dimen/calculator_button_size"
                android:layout_height="@dimen/calculator_button_size"
                android:background="@drawable/roundbutton"
                android:text="2"
                app:layout_constraintBottom_toTopOf="@+id/button0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button5"
                android:layout_margin="@dimen/calculator_space_between_button_size"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button0"
                style="@style/Calculator"
                android:layout_width="@dimen/calculator_button_size"
                android:layout_height="@dimen/calculator_button_size"
                android:background="@drawable/roundbutton"
                android:text="0"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button2"
                android:layout_margin="@dimen/calculator_space_between_button_size"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rightColumn"
            android:layout_width="@dimen/calculator_button_size"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/middleColumn"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="@dimen/calculator_space_between_container_size">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button9"
                style="@style/Calculator"
                android:layout_width="@dimen/calculator_button_size"
                android:layout_height="@dimen/calculator_button_size"
                android:background="@drawable/roundbutton"
                android:text="9"
                app:layout_constraintBottom_toTopOf="@+id/button6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                android:layout_margin="@dimen/calculator_space_between_button_size"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button6"
                style="@style/Calculator"
                android:layout_width="@dimen/calculator_button_size"
                android:layout_height="@dimen/calculator_button_size"
                android:background="@drawable/roundbutton"
                android:text="6"
                app:layout_constraintBottom_toTopOf="@+id/button3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button9"
                android:layout_margin="@dimen/calculator_space_between_button_size"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button3"
                style="@style/Calculator"
                android:layout_width="@dimen/calculator_button_size"
                android:layout_height="@dimen/calculator_button_size"
                android:background="@drawable/roundbutton"
                android:text="3"
                app:layout_constraintBottom_toTopOf="@+id/buttonClear"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button6"
                android:layout_margin="@dimen/calculator_space_between_button_size"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonClear"
                style="@style/Calculator"
                android:layout_width="@dimen/calculator_button_size"
                android:layout_height="@dimen/calculator_button_size"
                android:background="@drawable/roundbutton"
                android:backgroundTint="@color/error"
                android:text="C"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button3"
                android:layout_margin="@dimen/calculator_space_between_button_size"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>