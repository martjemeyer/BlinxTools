<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".calculator.CalculatorActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/toolbar_background"
        app:titleTextColor="@color/onSurface"
        app:popupTheme="@style/ThemeOverlay.AppCompat.DayNight"
        app:title="Calculator"
        android:elevation="4dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/calculatorBackgroundTop"
        app:layout_constraintBottom_toBottomOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <TextView
            android:id="@+id/pairConversionOutput"
            style="@style/Pair"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:ellipsize="end"
            android:enabled="false"
            android:maxLines="1"
            android:text="0"
            android:textColor="@color/onSurface"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/topInput"
            app:layout_constraintEnd_toEndOf="@+id/topInput"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="1.1234567" />

        <TextView
            android:id="@+id/pairCombination"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:maxLines="1"
            android:text="GTFTA/GTPLUS"
            android:textColor="@color/onSurface"
            android:autoSizeTextType="uniform"
            app:layout_constraintBottom_toBottomOf="@+id/pairConversionOutput"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/pairConversionOutput"
            app:layout_constraintTop_toTopOf="@+id/pairConversionOutput" />


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/topInput"
            style="@style/Pair"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:background="@drawable/soft_corners"
            android:backgroundTint="@color/calculatorBackgroundTopInput"
            android:ellipsize="end"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:padding="8dp"
            android:text="0"
            android:textColor="@color/onSurface"
            android:textIsSelectable="true"
            app:layout_constraintBottom_toTopOf="@+id/middleInput"
            app:layout_constraintEnd_toStartOf="@+id/topDropDown"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pairConversionOutput"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="1.1234567" />

        <ImageView
            android:id="@+id/btcImageView1"
            android:layout_width="24dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@+id/btc1"
            app:layout_constraintBottom_toBottomOf="@+id/btc1"
            app:layout_constraintEnd_toStartOf="@+id/btc1"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/exchange_arrows_black"
            android:tint="@color/onSurface" />

        <TextView
            android:id="@+id/btc1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BTC"
            app:layout_constraintBottom_toTopOf="@+id/middleInput"
            app:layout_constraintEnd_toEndOf="@+id/topInput"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/btcImageView1"
            app:layout_constraintTop_toBottomOf="@+id/topInput"
            android:textColor="@color/onSurface" />

        <Spinner
            android:id="@+id/topDropDown"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textColor="@color/onSurface"
            app:layout_constraintBottom_toBottomOf="@+id/topInput"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/topInput"
            app:layout_constraintTop_toTopOf="@+id/topInput" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/middleInput"
            style="@style/Pair"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/soft_corners"
            android:backgroundTint="@color/calculatorBackgroundTopInput"
            android:ellipsize="end"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:padding="8dp"
            android:text="0"
            android:textColor="@color/onSurface"
            android:textIsSelectable="true"
            app:layout_constraintBottom_toTopOf="@id/bottomInput"
            app:layout_constraintEnd_toStartOf="@+id/middleDropDown"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/topInput"
            tools:text="1.1234567" />

        <Spinner
            android:id="@+id/middleDropDown"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textColor="@color/onSurface"
            app:layout_constraintBottom_toBottomOf="@+id/middleInput"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/middleInput"
            app:layout_constraintTop_toTopOf="@+id/middleInput" />

        <ImageView
            android:id="@+id/btcImageView2"
            android:layout_width="24dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@+id/btc2"
            app:layout_constraintBottom_toBottomOf="@+id/btc2"
            app:layout_constraintEnd_toStartOf="@+id/btc2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/exchange_arrows_black"
            android:tint="@color/onSurface" />

        <TextView
            android:id="@+id/btc2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BTC"
            app:layout_constraintBottom_toTopOf="@+id/bottomInput"
            app:layout_constraintEnd_toEndOf="@+id/topInput"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/btcImageView2"
            app:layout_constraintTop_toBottomOf="@+id/middleInput"
            android:textColor="@color/onSurface" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/bottomInput"
            style="@style/Pair"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/soft_corners"
            android:backgroundTint="@color/calculatorBackgroundTopInput"
            android:ellipsize="end"
            android:inputType="numberDecimal"
            android:lines="1"
            android:maxLines="1"
            android:padding="8dp"
            android:text="0"
            android:textColor="@color/onSurface"
            android:textIsSelectable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/bottomInputDetail"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/middleInput"
            tools:text="1.1234567" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/bottomInputDetail"
            style="@style/Pair"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:padding="8dp"
            android:text="Euro"
            android:textColor="@color/onSurface"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/bottomInput"
            app:layout_constraintTop_toTopOf="@+id/bottomInput" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/leftColumn"
            android:layout_width="@dimen/calculator_button_size"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/middleColumn"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="@dimen/calculator_space_between_container_size">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button7"
                style="@style/Calculator"
                android:layout_width="@dimen/calculator_button_size"
                android:layout_height="@dimen/calculator_button_size"
                android:textSize="32dp"
                android:textColor="@color/onPrimary"
                android:text="7"
                android:background="@drawable/ripple"
                app:layout_constraintBottom_toTopOf="@+id/button4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                android:layout_margin="@dimen/calculator_space_between_button_size"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button4"
                style="@style/Calculator"
                android:layout_width="@dimen/calculator_button_size"
                android:layout_height="@dimen/calculator_button_size"
                android:background="@drawable/ripple"
                android:text="4"
                app:layout_constraintBottom_toTopOf="@+id/button1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button7"
                android:layout_margin="@dimen/calculator_space_between_button_size"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button1"
                style="@style/Calculator"
                android:layout_width="@dimen/calculator_button_size"
                android:layout_height="@dimen/calculator_button_size"
                android:background="@drawable/ripple"
                android:text="1"
                app:layout_constraintBottom_toTopOf="@+id/buttonDot"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button4"
                android:layout_margin="@dimen/calculator_space_between_button_size"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonDot"
                style="@style/Calculator"
                android:layout_width="@dimen/calculator_button_size"
                android:layout_height="@dimen/calculator_button_size"
                android:background="@drawable/ripple"
                android:text="."
                android:backgroundTint="@color/secondary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button1"
                android:layout_margin="@dimen/calculator_space_between_button_size"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/middleColumn"
            android:layout_width="@dimen/calculator_button_size"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/rightColumn"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/leftColumn"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="@dimen/calculator_space_between_container_size">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button8"
                style="@style/Calculator"
                android:layout_width="@dimen/calculator_button_size"
                android:layout_height="@dimen/calculator_button_size"
                android:background="@drawable/ripple"
                android:text="8"
                app:layout_constraintBottom_toTopOf="@+id/button5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                android:layout_margin="@dimen/calculator_space_between_button_size"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button5"
                style="@style/Calculator"
                android:layout_width="@dimen/calculator_button_size"
                android:layout_height="@dimen/calculator_button_size"
                android:background="@drawable/ripple"
                android:text="5"
                app:layout_constraintBottom_toTopOf="@+id/button2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button8"
                android:layout_margin="@dimen/calculator_space_between_button_size"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button2"
                style="@style/Calculator"
                android:layout_width="@dimen/calculator_button_size"
                android:layout_height="@dimen/calculator_button_size"
                android:background="@drawable/ripple"
                android:text="2"
                app:layout_constraintBottom_toTopOf="@+id/button0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button5"
                android:layout_margin="@dimen/calculator_space_between_button_size"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button0"
                style="@style/Calculator"
                android:layout_width="@dimen/calculator_button_size"
                android:layout_height="@dimen/calculator_button_size"
                android:background="@drawable/ripple"
                android:text="0"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button2"
                android:layout_margin="@dimen/calculator_space_between_button_size"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rightColumn"
            android:layout_width="@dimen/calculator_button_size"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/middleColumn"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="@dimen/calculator_space_between_container_size">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button9"
                style="@style/Calculator"
                android:layout_width="@dimen/calculator_button_size"
                android:layout_height="@dimen/calculator_button_size"
                android:background="@drawable/ripple"
                android:text="9"
                app:layout_constraintBottom_toTopOf="@+id/button6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                android:layout_margin="@dimen/calculator_space_between_button_size"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button6"
                style="@style/Calculator"
                android:layout_width="@dimen/calculator_button_size"
                android:layout_height="@dimen/calculator_button_size"
                android:background="@drawable/ripple"
                android:text="6"
                app:layout_constraintBottom_toTopOf="@+id/button3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button9"
                android:layout_margin="@dimen/calculator_space_between_button_size"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button3"
                style="@style/Calculator"
                android:layout_width="@dimen/calculator_button_size"
                android:layout_height="@dimen/calculator_button_size"
                android:background="@drawable/ripple"
                android:text="3"
                app:layout_constraintBottom_toTopOf="@+id/buttonClear"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button6"
                android:layout_margin="@dimen/calculator_space_between_button_size"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonClear"
                style="@style/Calculator"
                android:layout_width="@dimen/calculator_button_size"
                android:layout_height="@dimen/calculator_button_size"
                android:background="@drawable/ripple"
                android:backgroundTint="@color/error"
                android:text="C"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button3"
                android:layout_margin="@dimen/calculator_space_between_button_size"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/top"
        app:layout_constraintBottom_toTopOf="@id/bottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        tools:visibility="visible" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/top"
        app:layout_constraintBottom_toTopOf="@id/bottom"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:src="@drawable/refresh" />

</androidx.constraintlayout.widget.ConstraintLayout>
