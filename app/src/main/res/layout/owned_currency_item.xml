<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp">

    <ImageButton
        android:id="@+id/removeTokenButton"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/pencil"/>

    <TextView
        android:id="@+id/chosenToken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/removeTokenButton"
        app:layout_constraintTop_toBottomOf="@+id/removeTokenButton"
        app:layout_constraintBottom_toTopOf="@+id/removeTokenButton"
        android:layout_marginStart="16dp"
        style="@style/ValuesDetailsBtc"
        android:text="@string/chosen_currency"
        tools:text="500 GTPLUS" />

    <TextView
        android:id="@+id/chosenTokenEqualsSign"
        style="@style/ValuesDetailsBtc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/primary"
        app:layout_constraintStart_toEndOf="@+id/chosenToken"
        app:layout_constraintTop_toTopOf="@+id/chosenToken"
        android:textStyle="bold"
        android:text=" = " />

    <TextView
        android:id="@+id/chosenTokenValue"
        style="@style/ValuesDetailsBtc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/chosen_currency_value"
        app:layout_constraintStart_toEndOf="@+id/chosenTokenEqualsSign"
        app:layout_constraintTop_toTopOf="@+id/chosenToken"
        tools:text="50 EUR" />



</androidx.constraintlayout.widget.ConstraintLayout>